<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--
        We will use the existing condition from the Klevu_Categorynavigation module to ensure
        that our changes to the frontend search options only take place when the
        relevant configuration is enabled
    -->
    <type name="Acme\MyModuleCategorynavigation\Service\InteractiveOptionsProvider">
        <arguments>
            <argument name="isEnabledCondition" xsi:type="object">Klevu\Categorynavigation\Service\ThemeV2\IsEnabledCondition</argument>
        </arguments>
    </type>

    <type name="Klevu\FrontendJs\Service\InteractiveOptionsGenerator">
        <arguments>
            <argument name="interactiveOptionsProviders" xsi:type="array">
                <!--
                    Register out overrides to smart category merchandising configuration
                -->
                <item name="acme_mymodule_categorynavigation" xsi:type="object">Acme\MyModuleCategorynavigation\Service\InteractiveOptionsProvider</item>
            </argument>
        </arguments>
    </type>
</config>
